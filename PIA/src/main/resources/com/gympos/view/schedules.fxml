<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.gympos.controller.SchedulesController"
            styleClass="root" stylesheets="@../css/app.css">
    <top>
        <HBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <Button text="&lt; Volver" onAction="#goToDashboard"/>
            <Label text="Calendario de Clases" styleClass="title"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="table" style="-fx-margin: 10;">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn text="Clase" fx:id="colClass" minWidth="150"/>
                <TableColumn text="Día" fx:id="colDay" minWidth="100"/>
                <TableColumn text="Horario" fx:id="colTime" minWidth="120"/>
                <TableColumn text="Cupo" fx:id="colCapacity" minWidth="50"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="15" styleClass="form-panel" maxWidth="300">
            <Label text="Gestionar Clase" styleClass="title"/>
            
            <TextField fx:id="classNameField" promptText="Nombre (Zumba, Yoga...)" styleClass="input"/>
            <ComboBox fx:id="dayBox" promptText="Día de la semana" styleClass="input" maxWidth="Infinity"/>
            
            <HBox spacing="5">
                <TextField fx:id="timeField" promptText="Inicio (HH:mm)" styleClass="input" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="durationField" promptText="Minutos" styleClass="input" prefWidth="80"/>
            </HBox>
            
            <TextField fx:id="capacityField" promptText="Cupo Máximo" styleClass="input"/>
            
            <Separator styleClass="form-separator"/>
            
            <Button text="Agendar Clase" onAction="#handleAdd" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Actualizar" onAction="#handleUpdate" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Eliminar" onAction="#handleDelete" styleClass="delete-button" maxWidth="Infinity"/>
            <Button text="Limpiar" onAction="#handleClear" styleClass="sidebar-button" maxWidth="Infinity"/>
            
            <Label fx:id="errorLabel" styleClass="error" wrapText="true"/>
        </VBox>
    </right>
</BorderPane>