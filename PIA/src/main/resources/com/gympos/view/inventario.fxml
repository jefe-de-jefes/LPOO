<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.gympos.controller.InventarioController"
            styleClass="root" stylesheets="@../css/app.css">
    <top>
        <HBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <Button text="&lt; Volver" onAction="#goToDashboard"/>
            <Label text="Inventario de Equipos" styleClass="title"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="table" style="-fx-margin: 10;">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn text="Equipo" fx:id="colName"/>
                <TableColumn text="Cantidad" fx:id="colQty"/>
                <TableColumn text="Ubicación" fx:id="colLocation"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="15" styleClass="form-panel" maxWidth="300">
            <Label text="Gestionar Equipo" styleClass="title"/>
            
            <TextField fx:id="nameField" promptText="Nombre (ej. Pesas)" styleClass="input"/>
            <TextField fx:id="qtyField" promptText="Cantidad" styleClass="input"/>
            <TextField fx:id="locationField" promptText="Ubicación" styleClass="input"/>
            
            <Button text="Agregar / Sumar" onAction="#handleAdd" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Actualizar Selección" onAction="#handleUpdate" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Eliminar" onAction="#handleDelete" styleClass="delete-button" maxWidth="Infinity"/>
            <Button text="Limpiar Campos" onAction="#handleClear" styleClass="sidebar-button" maxWidth="Infinity"/>
            
            <Label fx:id="errorLabel" styleClass="error" wrapText="true"/>
        </VBox>
    </right>
</BorderPane>