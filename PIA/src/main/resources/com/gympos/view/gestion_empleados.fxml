<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.gympos.controller.GestionEmpleadosController"
            styleClass="root" stylesheets="@../css/app.css">
    
    <top>
        <HBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <Button text="&lt; Volver al Dashboard" onAction="#goToDashboard"/>
            <Label text="Gesti칩n de Empleados" styleClass="title"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table" style="-fx-margin: 10;">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn text="ID" fx:id="colId" maxWidth="100"/>
                <TableColumn text="Nombre Real" fx:id="colName"/>
                <TableColumn text="Usuario (Login)" fx:id="colUsername"/>
            </columns>
        </TableView>
    </center>

    <right>
        <VBox spacing="15" styleClass="form-panel" maxWidth="300">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <Label text="Datos del Empleado" styleClass="title" style="-fx-font-size: 18px;"/>
            
            <VBox spacing="5">
                <Label text="Nombre Completo" styleClass="field-label"/>
                <TextField fx:id="nameField" promptText="Ej. Juan Perez" styleClass="input"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Nombre de Usuario" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="Ej. jperez" styleClass="input"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Contrase침a" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="Contrase침a" styleClass="input"/>
            </VBox>
            
            <Separator styleClass="form-separator"/>
            
            <Button text="Agregar Empleado" onAction="#handleAdd" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Actualizar Selecci칩n" onAction="#handleUpdate" styleClass="action-button" maxWidth="Infinity"/>
            <Button text="Eliminar" onAction="#handleDelete" styleClass="delete-button" maxWidth="Infinity"/>
            <Button text="Limpiar Campos" onAction="#handleClear" styleClass="sidebar-button" maxWidth="Infinity"/>
            
            <Label fx:id="errorLabel" styleClass="error" wrapText="true"/>
        </VBox>
    </right>
</BorderPane>